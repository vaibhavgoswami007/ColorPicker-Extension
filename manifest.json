{
    "name" : "Color Picker" ,
    "description" : "A color Picker Extension" ,
    "version" : "1.0.0" ,
    "manifest_version" : 3 ,
     
    "background" :  {
        "service_worker" : "background.js"
    },
 
    "action" :{
        "default_popup" :"popup.html"
    } ,

    "permissions" :[
        "activeTab",
        "scripting"
    ],
    "icons" : {
        "16" : "/images/picker_16.png",
        "32" : "/images/picker_32.png",
        "48" : "/images/picker_48.png"
    }
    
}